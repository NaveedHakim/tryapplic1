<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".regstrparent"
    tools:layout_editor_absoluteY="25dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/register_toolbar"
            layout="@layout/app_barlayout"
            android:layout_width="411dp"
            android:layout_height="54dp" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="219dp"
            android:layout_height="26dp"
            android:layout_marginBottom="0dp"
            android:text="Create New Account"
            android:layout_below="@+id/register_toolbar"
        />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/textView"
            android:layout_marginStart="116dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_name"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_marginBottom="30dp"

            android:layout_below="@+id/imageView2"
            >

            <android.support.design.widget.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Name"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_pass"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"

            android:visibility="visible"
            android:layout_below="@+id/parent_email"
            tools:ignore="NotSibling"
          >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/regpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/parent_email"
            android:layout_width="380dp"
            android:layout_marginBottom="30dp"

            android:layout_height="41dp"
          android:layout_below="@+id/parent_name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/regmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:visibility="visible" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/child_name"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parent_pass"

            android:layout_marginBottom="30dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:hint="Child Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/child_grade"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"

            android:layout_below="@+id/child_name">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Child_Grade"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/child_grade2"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"

            android:layout_below="@+id/child_grade">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Child_Grade"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/child_grade3"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"

            android:layout_below="@+id/child_grade2">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Child_Grade"
                />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/parentsign"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_grade3"
            android:layout_marginBottom="30dp"

            android:text="Submit" />


    </RelativeLayout>



</ScrollView>